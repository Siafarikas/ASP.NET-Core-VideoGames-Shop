@using System.Security.Claims
@using VideoGamesShop.Core.Models.Game
@using VideoGamesShop.Extensions
@model GameDetailsViewModel
@{
    ViewData["Title"] = "GameDetails";
}
<center><b><h1>Game Details</h1></b></center>
<br />
<br />
<br />
<br />
<br />

<body class="skin-light" aria-busy="true">


    <!--Main Navigation-->
    <!--Main Navigation-->
    <!--Main layout-->


    <main>
        <div class="container">

            <!--Section: Block Content-->
            <section class="mb-5">

                <div class="row">
                    <div class="col-md-6 mb-4 mb-md-0">


                        <div class="mdb-lightbox" data-pswp-uid="1">

                            <div class="row product-gallery mx-1">

                                <div class="col-12 mb-0">
                                    <figure class="view overlay rounded z-depth-1 main-img" style="max-height: 470px;">
                                        <img src="@Model.ImageUrl" class="img-fluid z-depth-1" style="margin-top: -90px;max-height: 20%">
                                    </figure>

                                </div>

                            </div>

                        </div>

                    </div>
                    <div class="col-md-6">

                        <h5><strong>@Model.Title</strong></h5>
                        <p class="mb-2 text-muted text-uppercase small">Digital</p>
                        <p><span class="mr-1"><strong>$@Model.Price</strong></span></p>
                        <p class="pt-1">
                            @Model.Description
                        </p>
                        <div class="table-responsive">
                            <table class="table table-sm table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <th class="pl-0 w-25" scope="row"><strong>Genre</strong></th>
                                        <td>@Model.Genre</td>
                                    </tr>
                                    <tr>
                                        <th class="pl-0 w-25" scope="row"><strong>Release Date</strong></th>
                                        <td>@Model.ReleaseDate</td>
                                    </tr>
                                    <tr>
                                        <th class="pl-0 w-25" scope="row"><strong>Developer</strong></th>
                                        <td>@Model.Developer</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <hr>
                        <a asp-controller="Store" asp-action="AddToCart" asp-route-userId="@User.Id()" asp-route-gameId="@Model.GameId" class="btn btn-primary"><i class="bi bi-cart2 me-1"></i>Add to Cart</a>
                        <a href="#!" type="button" class="card-link-secondary small text-uppercase"><i class="fas fa-heart mr-1"></i> Move to wish list </a>
                    </div>
                </div>

            </section>
            <!--Section: Block Content-->
            <!--Section: Block Content-->

        </div>
    </main>
    <!--Main layout-->
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script src="../../../js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="../../../js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="../../../js/bootstrap.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="../../../js/mdb.min.js"></script>
    <!-- MDB Ecommerce JavaScript -->
    <script type="text/javascript" src="../../../js/mdb.ecommerce.min.js"></script>
    <script>
        $(document).ready(function () {
          // MDB Lightbox Init
          $(function () {
            $("#mdb-lightbox-ui").load("../../../mdb-addons/mdb-lightbox-ui.html");
          });
        });
    </script>


    <div class="hiddendiv common"></div>
</body>