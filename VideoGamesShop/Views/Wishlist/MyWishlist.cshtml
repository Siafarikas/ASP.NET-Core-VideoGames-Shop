@using System.Security.Claims
@using VideoGamesShop.Core.Models.Wishlist
@using VideoGamesShop.Extensions
@model IEnumerable<WishListViewModel>
@{
    ViewData["Title"] = "My Wishlist";
}
<style>
    img-cart {
        width: 150px;
        height: 150px;
    }
</style>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>My Wishlist</title>
    <!-- Roboto Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="../../../css/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="../../../css/mdb-pro.min.css">
    <!-- Material Design Bootstrap Ecommerce -->
    <link rel="stylesheet" href="../../../css/mdb.ecommerce.min.css">
    <!-- Your custom styles (optional) -->

</head>

<main>
    <div class="container">
        <center><b><h1>@ViewData["Title"]</h1></b></center>
        <br />
        <!--Section: Block Content-->
        <section>

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <!-- Card -->
                @foreach (var game in @Model)
                {
                        <div class="col-md-4 mb-5">
                            <div class="">

                                <div class="mask waves-effect waves-light">
                                    <img class="img-fluid w-100" src="@game.ImageUrl">
                                    <div class="mask rgba-black-slight waves-effect waves-light"></div>
                                </div>

                                <div class="text-center pt-4">

                                    <h5>@game.Title</h5>
                                    <p class="mb-2 text-muted text-uppercase small">@game.Genre</p>
                                    <hr>
                                    <h6 class="mb-3">@game.Price$</h6>
                                    <a asp-controller="Store" asp-action="AddToCart" asp-route-userId="@User.Id()" asp-route-gameId="@game.GameId" class="btn btn-primary"><center><i class="bi bi-cart2 me-1"> Add to Cart</i></center></a>
                                    <a asp-controller="Store" asp-action="GameDetails" asp-route-gameId="@game.GameId" class="btn btn-secondary"><i class="bi bi-info-circle me-1"> Details</i></a>
                                    <a asp-controller="Wishlist" asp-action="RemoveFromWishlist" asp-route-userId="@User.Id()" asp-route-gameId="@game.GameId" class="btn btn-danger"><i class="bi bi-x-circle"></i></a>
                                </div>

                            </div>
                        </div>
                }
                <!-- Card -->
                <!-- Grid column -->

            </div>
            <!-- Grid row -->

        </section>
        <!--Section: Block Content-->

    </div>
</main>

