@using VideoGamesShop.Core.Models
@model IEnumerable<GameListViewModel>
@{
    ViewData["Title"] = "Store";
}
<style>
    h1{
        font-size: 60px;
        color: blue;
    }
</style>

<div class="small-container">
    <center><b><h1>STORE</h1></b></center>
    <br />
    <br />
    <div class="row">
        @foreach (var game in @Model)
        {
            <div class="col-2">
                <div class="card">
                    <img src="@game.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <center><h5 class="card-title">@game.Title</h5></center>
                        <center><p class="card-text">$@game.Price</p></center>
                        <br>
                        <center>
                            <button type="button" class="btn btn-secondary"><i class="bi bi-cart2 me-1"></i>Cart</button>
                            <button type="button" class="btn btn-danger"><i class="bi bi-heart me-1"></i>WishList</button>
                        </center>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

